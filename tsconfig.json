{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "resolveJsonModule": true,
        "declaration": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@src/*": [
                "src/modules/*"
            ]
        }
    },
    "ts-node": {
        "esm": true,
        "compilerOptions": {
            "module": "CommonJS",
            "esModuleInterop": true
        }
    },
    "include": [
        "src/**/*.ts",
        "./src/modules/*.ts",
        "tests/**/*.ts"
    ]
}